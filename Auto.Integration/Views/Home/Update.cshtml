@model Auto.Integration.Models.AutoBrand

@{
    ViewBag.Title = "Изменить бренд";
}

<form asp-action="Update" asp-controller="Home" method="post" asp-antiforgery="true" novalidate>

    <input type="hidden" name="Id" value="@Model.Id"/>

    <div class="form-group row">
        <div class="col">
            <div class="col-md-10">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" required>
            </div>
        </div>
    </div>
    
    <div class="col form-group mt-5">
        <button type="submit" class="btn btn-primary ml-2">Сохранить</button>
    </div>
</form>